<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust radius as needed -->
            <solid android:color="#F1F2F4" /> <!-- Light grey background -->
        </shape>
    </item>

    <!-- Progress layer -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp" /> <!-- Adjust radius as needed -->
                <solid android:color="@color/primaryColor" /> <!-- White color for progress -->
            </shape>
        </clip>
    </item>
</layer-list>
